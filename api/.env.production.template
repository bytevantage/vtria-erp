# Server Configuration
PORT=5000
NODE_ENV=production
BYPASS_AUTH=false

# Database Configuration
DB_HOST=DB_HOST_HERE
DB_PORT=3306
DB_USER=DB_USER_HERE
DB_PASS=DB_PASSWORD_HERE
DB_NAME=vtria_erp

# Redis Configuration
REDIS_HOST=REDIS_HOST_HERE
REDIS_PORT=6379
REDIS_PASSWORD=REDIS_PASSWORD_HERE
REDIS_DB=0

# JWT Configuration
JWT_SECRET=STRONG_SECRET_KEY_HERE
JWT_EXPIRY=24h

# File Upload Configuration
UPLOAD_DIR=/var/www/vtria-erp/uploads
MAX_FILE_SIZE=5242880 # 5MB

# Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_DIR=/var/log/vtria-erp

# API Documentation
SWAGGER_ENABLED=false

# CORS Configuration
CORS_ORIGIN=https://erp.vtria.com

# Document Number Prefixes
DOC_PREFIX_ENQUIRY=VESPL/EQ/2526
DOC_PREFIX_ESTIMATION=VESPL/ET/2526
DOC_PREFIX_QUOTATION=VESPL/Q/2526
DOC_PREFIX_SALES_ORDER=VESPL/SO/2526
DOC_PREFIX_PURCHASE=VESPL/PR/2526
DOC_PREFIX_PURCHASE_ORDER=VESPL/PO/2526
DOC_PREFIX_GRN=VESPL/GRN/2526
DOC_PREFIX_INVOICE=VESPL/I/2526
DOC_PREFIX_DC=VESPL/DC/2526

# Company Information
COMPANY_NAME=VTRIA Engineering Solutions Pvt Ltd
COMPANY_ADDRESS=Company Address, Mangalore
COMPANY_PHONE=+91 XXXXXXXXXX
COMPANY_EMAIL=info@vtria.com
COMPANY_GSTIN=XXXXXXXXXXXXX

# Security
SSL_KEY_PATH=/etc/ssl/private/vtria-erp.key
SSL_CERT_PATH=/etc/ssl/certs/vtria-erp.crt
ENABLE_HTTPS=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
