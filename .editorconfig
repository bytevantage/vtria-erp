root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,json,css,scss,html,vue}]
indent_size = 2

[*.{py,sql}]
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf