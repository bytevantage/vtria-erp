# ByteVantage Licensing Server Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=3001
DOMAIN=licenses.bytevantage.in
API_BASE_URL=https://licenses.bytevantage.in

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bytevantage_licenses
DB_USER=bytevantage_user
DB_PASSWORD=your_secure_database_password
DB_SSL=true

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-for-licensing-server
JWT_EXPIRES_IN=1h
API_KEY_SECRET=your-api-key-encryption-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/licensing-server.log

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@bytevantage.in
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@bytevantage.in

# License Configuration
DEFAULT_LICENSE_DURATION_DAYS=365
MAX_LICENSE_DURATION_DAYS=1825
LICENSE_GRACE_PERIOD_DAYS=7
