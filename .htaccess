# VTRIA ERP Development .htaccess
# For development environment in WAMP htdocs

# Enable Rewrite Engine
RewriteEngine On

# Handle React Router routing during development
RewriteBase /vtria-erp/
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/vtria-erp/api/
RewriteRule . /vtria-erp/index.html [L]

# CORS headers for development
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-License-Key"

# Handle preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]
