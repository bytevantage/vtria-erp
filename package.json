{
  "name": "vtria-erp",
  "version": "1.1.0",
  "description": "VTRIA ERP System - Complete Enterprise Resource Planning Solution",
  "private": true,
  "workspaces": [
    "client",
    "api"
  ],
  "scripts": {
    "install": "npm install --prefix client && npm install --prefix api",
    "start": "./scripts/manage.sh start",
    "start:dev": "./scripts/manage.sh start-dev",
    "start:prod": "./scripts/manage.sh start-prod",
    "stop": "./scripts/manage.sh stop",
    "restart": "./scripts/manage.sh restart",
    "status": "./scripts/manage.sh status",
    "logs": "./scripts/manage.sh logs",
    "setup": "./scripts/manage.sh setup-admin",
    "manage": "./scripts/manage.sh",
    "version": "node scripts/version-manager.js status",
    "release:demo": "node scripts/version-manager.js release-demo",
    "release:production": "node scripts/version-manager.js release-production",
    "release:customer": "node scripts/version-manager.js release-customer",
    "create-customer": "node scripts/version-manager.js create-customer",
    "deploy:demo": "./scripts/deploy-demo.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:status": "docker-compose ps",
    "docker:cleanup": "docker-compose down --volumes --remove-orphans && docker system prune -f",
    "dev": "./scripts/manage.sh start-dev",
    "prod": "./scripts/manage.sh start-prod",
    "build": "npm run build --prefix client",
    "test": "npm run test --prefix client && npm run test --prefix api",
    "lint": "npm run lint --prefix client && npm run lint --prefix api",
    "lint:fix": "npm run lint:fix --prefix client && npm run lint:fix --prefix api",
    "format": "npm run format --prefix client && npm run format --prefix api",
    "format:check": "npm run format:check --prefix client && npm run format:check --prefix api",
    "validate": "npm run validate --prefix client && npm run validate --prefix api",
    "docs": "npm run docs --prefix api",
    "prepare": "husky install",
    "clean": "rm -rf client/node_modules api/node_modules node_modules",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "api/src/**/*.{js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vtria-erp.git"
  },
  "keywords": [
    "erp",
    "vtria",
    "engineering",
    "automation",
    "industrial",
    "react",
    "nodejs",
    "mysql",
    "docker"
  ],
  "author": "VTRIA Engineering Solutions Pvt Ltd",
  "license": "PROPRIETARY",
  "dependencies": {
    "dotenv": "^17.2.3",
    "mysql2": "^3.15.2"
  }
}
