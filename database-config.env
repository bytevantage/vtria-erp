# VTRIA ERP Database Configuration
# Copy this file and customize for your environment

# Database Connection Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vtria_erp
DB_USER=vtria_user
DB_PASSWORD=dev_password

# Docker Container Settings  
DB_CONTAINER_NAME=vtria-erp-db-1
DOCKER_COMPOSE_FILE=docker-compose.yml

# Backup Settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true

# Export Settings
EXPORT_DIR=./exports
SAMPLE_DATA_DIR=./sample_data

# Security Settings
BACKUP_ENCRYPT=false
BACKUP_PASSWORD=""

# Cloud Storage (Optional)
AWS_S3_BUCKET=""
AWS_ACCESS_KEY=""
AWS_SECRET_KEY=""

# Monitoring
HEALTH_CHECK_INTERVAL=300  # seconds
LOG_LEVEL=INFO

# Performance
MYSQLDUMP_SINGLE_TRANSACTION=true
MYSQLDUMP_LOCK_TABLES=false
MYSQLDUMP_ROUTINES=true
MYSQLDUMP_TRIGGERS=true