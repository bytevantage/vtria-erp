# VTRIA ERP Local Development Environment
# Copy this to .env.local and modify as needed for local development

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=5000
FRONTEND_PORT=3000

# ================================
# DATABASE CONFIGURATION
# ================================
# Local MySQL Database Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vtria_erp_dev
DB_USER=root
DB_PASSWORD=your-local-mysql-password
DB_ROOT_PASSWORD=your-local-mysql-root-password

# ================================
# SECURITY & AUTHENTICATION
# ================================
# Development JWT Secret (use simple one for dev)
JWT_SECRET=dev_jwt_secret_key_not_for_production
JWT_EXPIRES_IN=24h
BYPASS_AUTH=false

# ================================
# API CONFIGURATION
# ================================
# Local API URLs
API_BASE_URL=http://localhost:5000
REACT_APP_API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# ================================
# FILE UPLOADS
# ================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
MAX_FILE_UPLOAD=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ================================
# EMAIL (Optional for dev)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-dev-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=dev@vtria-erp.local

# ================================
# LOGGING & DEBUG
# ================================
LOG_LEVEL=debug
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_API_DOCS=true
SWAGGER_ENABLED=true

# ================================
# DEVELOPMENT FEATURES
# ================================
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
SHOW_STACK_TRACES=true
ENABLE_PROFILING=true

# ================================
# CORS (Allow all for dev)
# ================================
CORS_ORIGIN=*
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Company Info (Dev)
COMPANY_NAME=VTRIA ERP Dev
COMPANY_EMAIL=dev@vtria-erp.local