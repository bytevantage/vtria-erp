# VTRIA ERP Environment Configuration for WAMP Server
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost
DOMAIN=localhost

# Database Configuration (WAMP PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vtria_erp_dev
DB_USER=postgres
DB_PASSWORD=your_wamp_postgres_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=vtria-erp-wamp-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# License Configuration (ByteVantage)
LICENSE_KEY=your-license-key-from-bytevantage
LICENSE_API_URL=https://licenses.bytevantage.in/api

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@vtria.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@vtria.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=info

# WAMP Specific Configuration
APACHE_PROXY=true
APACHE_HOST=localhost
APACHE_PORT=80
