# VTRIA ERP Production Environment Configuration
# Version: 1.1.0
# Last Updated: October 5, 2025

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=production
PORT=5000
FRONTEND_PORT=3000

# ================================
# DATABASE CONFIGURATION
# ================================
# MySQL Database Settings
DB_HOST=db
DB_PORT=3306
DB_NAME=vtria_erp
DB_USER=vtria_user
DB_PASSWORD=VtriaErp@2024!Secure
DB_ROOT_PASSWORD=VtriaRoot@2024!Admin

# Database Pool Settings
DB_CONNECTION_LIMIT=50
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=30000

# ================================
# SECURITY & AUTHENTICATION
# ================================
# JWT Secret - CHANGE THIS FOR PRODUCTION
JWT_SECRET=VtriaERP_JWT_Production_Secret_Key_2024_Change_This_For_Security
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BYPASS_AUTH=false

# Session Configuration
SESSION_SECRET=VtriaERP_Session_Secret_Production_2024_Change_This
SESSION_MAX_AGE=86400000

# Encryption Keys - CHANGE THESE FOR PRODUCTION
ENCRYPTION_KEY=VtriaERP_Encryption_Key_Production_32char
HASH_SALT_ROUNDS=12

# ================================
# API CONFIGURATION
# ================================
# API Base URLs
API_BASE_URL=http://localhost:5000
REACT_APP_API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FILE STORAGE & UPLOADS
# ================================
# Upload Configuration
UPLOAD_DIR=/var/www/vtria-erp/uploads
MAX_FILE_SIZE=10485760
MAX_FILE_UPLOAD=10
FILE_UPLOAD_PATH=/var/www/vtria-erp/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Static Files
STATIC_FILES_PATH=/var/www/vtria-erp/public
DOCUMENTS_PATH=/var/www/vtria-erp/documents

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP Settings - Configure for your email provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-app-specific-password
SMTP_EMAIL=your-email@yourdomain.com
EMAIL_FROM=noreply@vtria-erp.com
EMAIL_FROM_NAME=VTRIA ERP System

# ================================
# LOGGING & MONITORING
# ================================
# Log Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/vtria-erp
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Enable/Disable Logging
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true
ENABLE_DEBUG_LOGS=false

# ================================
# CACHE CONFIGURATION
# ================================
# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL Settings (in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_REPORTS=1800
CACHE_TTL_USER_DATA=7200

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# License Server
LICENSE_SERVER_URL=https://api.bytevantage.in

# Payment Gateway (if applicable)
PAYMENT_GATEWAY_URL=
PAYMENT_GATEWAY_KEY=
PAYMENT_GATEWAY_SECRET=

# SMS Service (if applicable)
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

# Cloud Storage (if applicable)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# ================================
# SECURITY HEADERS
# ================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# ================================
# FEATURE FLAGS
# ================================
# Enable/Disable Features
ENABLE_USER_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_AUDIT_LOGS=true
ENABLE_API_DOCS=false

# Module Toggles
ENABLE_FINANCIAL_MODULE=true
ENABLE_INVENTORY_MODULE=true
ENABLE_HR_MODULE=true
ENABLE_MANUFACTURING_MODULE=true
ENABLE_REPORTING_MODULE=true

# ================================
# PERFORMANCE SETTINGS
# ================================
# Server Configuration
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Database Performance
DB_SLOW_QUERY_THRESHOLD=2000
DB_EXPLAIN_SLOW_QUERIES=false

# ================================
# DOCKER & DEPLOYMENT
# ================================
# Docker Configuration
COMPOSE_PROJECT_NAME=vtria-erp
COMPOSE_FILE=docker-compose.windows.yml

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ================================
# TIMEZONE & LOCALIZATION
# ================================
TZ=Asia/Kolkata
LOCALE=en-IN
CURRENCY=INR
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm:ss

# ================================
# CUSTOM APPLICATION SETTINGS
# ================================
# Company Information
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+91-XXXXXXXXXX
COMPANY_EMAIL=info@yourcompany.com
COMPANY_WEBSITE=https://www.yourcompany.com

# System Settings
DEFAULT_USER_ROLE=employee
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800

# ================================
# DEBUG & DEVELOPMENT (Production: false)
# ================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
SHOW_STACK_TRACES=false
SWAGGER_ENABLED=false

# ================================
# PRODUCTION SECURITY NOTES
# ================================
# IMPORTANT: CHANGE THESE BEFORE PRODUCTION:
# 1. DB_PASSWORD - Use a strong, unique password
# 2. JWT_SECRET - Generate a 64+ character random string
# 3. SESSION_SECRET - Generate a unique session secret
# 4. ENCRYPTION_KEY - Must be exactly 32 characters
# 5. SMTP credentials - Configure your email provider
# 6. ALLOWED_ORIGINS - Set to your actual domain
# 7. SSL_CERT_PATH - Configure SSL certificates
# 8. BACKUP_DIR - Set up backup location and permissions